    @if (Model != null && Model.Count > 0)
    {
        string classLabel = "g1";


        for (int i = 0; i < Model.Count; i++)
        {
            classLabel = (i % 2 > 0) ? "g1" : "g2";

            <li class="@classLabel" id="@Model[i].PackageID"><a href="/Package/PackageDetails?id=@Model[i].PackageID"><span style="opacity:1; color:#ffffff;">@Model[i].PackageName</span></a></li>
        }

    }

</ul>

