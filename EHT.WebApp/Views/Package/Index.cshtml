@model List<EHT.WebApp.Models.ViewModels.PackageViewModel>
@{
    ViewData["Title"] = "Package Information";
}

<style type="text/css">

    .eht-product-list {
        color: #ffffff;
        list-style: none;
        padding: 0;
        list-style-type: none;
    }

        .eht-product-list li {
            /*height: 150px;*/
            height:100px;
            width: 100%;
            padding: 10px;
            cursor:pointer;
            font-size: 25px;
            font-weight:bold;
        }

        .eht-product-list > li :hover {
            background:#ff6a00;
        }

        .eht-product-list .g1 {
            background: rgba(68, 68, 68, 0.80) /* 70% opaque red */
        }
        .eht-product-list .g2 {
            background: rgba(112, 112, 112, 0.80) /* 70% opaque red */
        }

</style>

