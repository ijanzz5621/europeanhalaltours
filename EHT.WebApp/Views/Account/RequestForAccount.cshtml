@model EHT.WebApp.Models.RequestAccountModel

<div style="padding: 10px;">

    <h4>Register - Request for an account</h4>

    <span>Please fill up below form and submit. We will contact you to verify your information. You will be given an access if your information validated successfully.</span>
    
    <hr />

    <form asp-controller="Account" asp-action="RequestForAccount" method="post" class="form-horizontal">

        <div asp-validation-summary="All" class="text-danger"></div>

        <br />

        <div class="form-group">
            <label for="Name" class="control-label col-xs-2">Name</label>
            <div class="col-xs-10">
                <input type="text" class="form-control" id="Name" placeholder="Your Name" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label for="Email" class="control-label col-xs-2">Email</label>
            <div class="col-xs-10">
                <input type="email" class="form-control" id="Email" placeholder="Company Email" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label for="PhoneNumber" class="control-label col-xs-2">Contact No</label>
            <div class="col-xs-10">
                <input type="text" class="form-control" id="PhoneNumber" placeholder="Phone Number" asp-for="PhoneNumber">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label for="Remark" class="control-label col-xs-2">How can we help you?</label>
            <div class="col-xs-10">
                @*<input type="text" class="form-control" id="Remark" placeholder="Please tell us what you want" asp-for="Remark">*@
                <textarea class="form-control" rows="5" id="Remark" placeholder="Please tell us what you want" asp-for="Remark"></textarea>
                <span asp-validation-for="Remark" class="text-danger"></span>
            </div>
        </div>

        @*<div class="form-group">
                <label for="inputPassword" class="control-label col-xs-2">Password</label>
                <div class="col-xs-10">
                    <input type="password" class="form-control" id="inputPassword" placeholder="Password">
                </div>
            </div>*@
        @*<div class="form-group">
                <div class="col-xs-offset-2 col-xs-10">
                    <div class="checkbox">
                        <label><input type="checkbox"> Remember me</label>
                    </div>
                </div>
            </div>*@
        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-10">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>

</div>

