@model EHT.WebApp.Models.ViewModels.PackageViewModel
@{
    ViewData["Title"] = "Remove Package";
}

<h1>You are about to remove below package:</h1>

<hr />

<div style="padding: 15px;">

    <form id="postPackage" method="post" action="/Admin/PackageDelete">

        @Html.HiddenFor(model => model.PackageID)

        <div class="form-group">
            <label for="PackageName">Package Name:</label>
            <span style="color:#ff6a00; font-size:22px; font-weight:bold;">@Html.DisplayTextFor(x => x.PackageName)</span>
        </div>

        <div class="form-group">
            <label for="OrderSequence">Order Sequence:</label>
            <span style="color:#ff6a00; font-size:22px; font-weight:bold;">@Html.DisplayTextFor(x => x.OrderSequence)</span>
</div>

        <table class="table table-bordered">
            <thead>
                <tr style="background-color:#808080;">
                    <th style="width:80px;">Day</th>
                    <th style="width:300px;">Title</th>
                    <th>Event Description</th>
                </tr>
            </thead>
            <tbody>

                @{

                    if (Model != null && Model.PackageDetails.Count > 0)
                    {
                        for (int i = 0; i < Model.PackageDetails.Count; i++)
                        {
                            <tr>
                                <th scope="row">@Html.DisplayTextFor(model => model.PackageDetails[i].Day)</th>
                                <td>@Html.DisplayTextFor(model => model.PackageDetails[i].Title)</td>
                                <td>@Html.DisplayTextFor(model => model.PackageDetails[i].Event)</td>
                            </tr>
                        }
                    }

                }

            </tbody>
        </table>

        <button id="btnBack" type="button" class="btn btn-default" onclick="window.location.href='@Url.Action("Package", "Admin" )';">Back</button>
        &nbsp;
        <button id="btnSubmit" type="submit" class="btn btn-primary">Remove Package</button>

    </form>

</div>